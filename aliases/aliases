# Aliases/functions for refrence management
function ra {
    # Label reference "to_read", edit citation information and change to
    # resulting directory
    d=$(refman.py -e -t @to_read "$@") && cd "$d" || return
}
alias rv='refview.sh'
function rn {
    # Edit a reference's notes using $EDITOR
    ( test ! -z "$1" && cd "$1" && $EDITOR notes.txt || return )
}
function rs {
    # Search references using fzf and change to selected directory
    d=$(refsearch.sh "$@") && cd "$d" || return
}
