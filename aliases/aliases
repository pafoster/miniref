# Aliases/functions for bibliography management
function ra { # Add reference to "to_read" and change to resulting directory
    target_parent="$REFS"/all/to_read
    target=$(cd "$target_parent" && refadd.py "$@")
    test ! -z "$target" && cd "$target_parent"/"$target" || exit 1
}
function rv { # Display first PDF for each reference supplied
    refview.sh "$@"
}
function rn { # Edit a reference's notes using $EDITOR
    ( test ! -z "$1" && cd "$1" || exit
      $EDITOR notes.txt
    )
}
function rs { # Search references using fzf
    refsearch.sh "$@"
}
